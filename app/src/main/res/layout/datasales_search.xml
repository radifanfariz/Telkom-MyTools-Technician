<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataSales_Search"
    android:background="@android:color/black"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCFC"
        android:isScrollContainer="false"
        android:orientation="vertical"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="SEARCH"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"/>


            <TableRow
                android:layout_marginTop="30dp">


                <TextView
                    android:id="@+id/textView2334"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="0.4"
                    android:text="NAMA CALANG"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/textNamaCalang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Please type...!!!"
                    android:inputType="textMultiLine" />

            </TableRow>


        </TableLayout>






        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>


                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="0.4"
                    android:text="ALAMAT CALANG"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/textAlamatCalang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Please type...!!!"
                    android:inputType="textMultiLine"
                    android:text="" />
            </TableRow>


            <TableRow
                android:layout_marginTop="30dp">


                <TextView
                    android:id="@+id/textView234"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="0.4"
                    android:text="NOMOR SC"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/textNomor_sc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Please type...!!!"
                    android:inputType="textMultiLine" />

            </TableRow>




        </TableLayout>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.33"
                    android:text="SEARCH" />




    </LinearLayout>

</LinearLayout>