<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessActivity">
    <TextView
        android:id="@+id/success_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/success_animation"
        android:layout_margin="30dp"
        android:text="SUCCESS"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:layout_marginTop="100dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_fileName="success_animation.json"/>
    <Button
        android:id="@+id/success_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:theme="@style/TersierButton"
        app:layout_constraintBottom_toBottomOf="@id/success_animation"/>


</androidx.constraintlayout.widget.ConstraintLayout>