<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorBlue2</item>
        <item name="colorControlHighlight">@color/colorAbu2</item>
    </style>
    <style name="SecondaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorTeal</item>
        <item name="colorControlHighlight">@color/colorAbu2</item>
    </style>
    <style name="TersierButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/holo_green_dark</item>
        <item name="colorControlHighlight">@color/colorAbu2</item>
    </style>
    <style name="QuarterButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorGreen</item>
    </style>
    <style name="PentaButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/black</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>
    <style name="HexaButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/holo_red_dark</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

</resources>
